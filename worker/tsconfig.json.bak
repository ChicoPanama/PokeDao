{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "src/core/**/*.ts",
    "src/index-lite.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
