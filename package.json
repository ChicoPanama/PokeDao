{
  "name": "pokedao",
  "private": true,
  "version": "0.0.0",
  "description": "PokeDAO monorepo",
  "workspaces": [
    "api",
    "bot",
    "worker",
    "ml"
  ],
  "scripts": {
    "build": "pnpm -r --parallel run build",
    "dev": "pnpm -r --parallel run dev",
    "typecheck": "pnpm -r --parallel run typecheck",
    "lint": "pnpm -r --parallel run lint",
    "green:verify": "cd api && npx prisma validate && npx prisma generate && cd .. && pnpm -w typecheck && pnpm -w build",
    "build:scripts": "tsc -p ./scripts/tsconfig.json",
    "setup": "pnpm install && pnpm --filter api prisma generate && pnpm run db:reset",
    "db:reset": "pnpm --filter api prisma migrate reset --force && pnpm run db:seed",
    "db:seed": "pnpm --filter api prisma db seed",
    "test": "pnpm -r run test",
    "smoke": "node scripts/smoke.sh",
    "cardmarket:test": "node cardmarket-pokemon-extractor.js --test",
    "cardmarket:extract": "node cardmarket-pokemon-extractor.js",
    "cardmarket:setup": "node test-cardmarket-integration.js"
  },
  "prisma": {
    "schema": "./api/prisma/schema.prisma",
    "seed": "node api/prisma/seed.mjs"
  },
  "devDependencies": {
    "@prisma/client": "^6.15.0",
    "@types/node": "^24.3.1",
    "dotenv": "^17.2.2",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2"
  },
  "pnpm": {
    "overrides": {
      "@prisma/client": "6.15.0",
      "prisma": "6.15.0"
    }
  },
  "dependencies": {
    "cardmarket-wrapper": "^1.0.6",
    "dotenv": "^16.0.0",
    "node-fetch": "^2.6.7",
    "redis": "^5.8.2",
    "typescript": "^5.9.2"
  }
}
