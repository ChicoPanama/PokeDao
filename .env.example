# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pokedao?schema=public

# Cache
REDIS_URL=redis://localhost:6379

# Web
NODE_ENV=development
PORT=3000

# Bot (optional)
TELEGRAM_BOT_TOKEN=__replace_me__

# External APIs (optional)
TCGPLAYER_API_KEY=your_tcgplayer_api_key
TCGPLAYER_API_SECRET=your_tcgplayer_secret
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
POKEMON_TCG_API_BASE=https://api.pokemontcg.io/v2
POKEMON_TCG_API_KEY=your_pokemon_tcg_api_key

# CardMarket OAuth (if using CardMarket integration)
CARDMARKET_CONSUMER_KEY=your_consumer_key_here
CARDMARKET_CONSUMER_SECRET="your_consumer_secret_here"
CARDMARKET_ACCESS_TOKEN="your_access_token_here"
CARDMARKET_ACCESS_TOKEN_SECRET="your_access_token_secret_here"

# Next.js Public Variables
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Development
NODE_ENV="development"
PORT="3000"
LOG_LEVEL="info"

# Proof base URL for proof-lite links
PROOF_BASE_URL=http://localhost:3000

# Paper mode flag (no posting)
PAPER_MODE=true
# AI / LLM (Ollama + Qwen)
OLLAMA_BASE_URL=http://localhost:11434
QWEN_MODEL=qwen2.5:7b-instruct

# eBay Finding API (sold comps collector)
EBAY_APP_ID=YourAppIdHere
EBAY_GLOBAL_ID=EBAY-US

# Poster (dry-run / go-live switch)
POSTER_TARGET=console
# PAPER_MODE=true keeps poster in dry-run mode
