{
  "files.associations": {
    "**/*.prisma": "plaintext",
    "**/*.plan.prisma": "plaintext"
  },
  
  "problems.exclude": {
    "**/*.prisma": true,
    "**/*.plan.prisma": true,
    "**/.pnpm/**": true,
    "**/node_modules/**": true,
    "**/.prisma/**": true,
    "research/**": true,
    "**/generated/**": true,
    "**/*prisma*/**": true
  },
  
  "search.exclude": {
    "**/*.prisma": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.pnpm": true,
    "**/.prisma": true
  },
  
  "files.watcherExclude": {
    "**/*.prisma": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/.pnpm/**": true,
    "**/.prisma/**": true
  },
  
  "typescript.preferences.exclude": [
    "**/node_modules/**",
    "**/.pnpm/**",
    "**/.prisma/**"
  ],
  
  "eslint.workingDirectories": [
    { "pattern": "api" },
    { "pattern": "bot" },
    { "pattern": "worker" },
    { "pattern": "ml" },
    { "pattern": "packages/**" }
  ],
  "eslint.validate": ["typescript"],
  
  "extensions.ignoreRecommendations": true,
  "prisma.trace.server": "off"
}
